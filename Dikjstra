#include <stdio.h>

#define INF 1000000000   // ค่ามาก ๆ ใช้แทน ∞
#define MAXN 100         // จำนวนจุดสูงสุด

int main() {
    int n, m;
    printf("Enter number of vertices and edges: ");
    if (scanf("%d %d", &n, &m) != 2) return 0;

    if (n <= 0 || n > MAXN) {
        printf("Invalid number of vertices\n");
        return 0;
    }

    // สร้าง adjacency matrix
    float g[MAXN][MAXN];
    for (int i = 0; i < n; ++i) {
        for (int j = 0; j < n; ++j) {
            if (i == j) g[i][j] = 0;
            else g[i][j] = INF;
        }
    }

    // อ่านข้อมูลเส้นเชื่อม
    // รูปแบบ: u v w  (จาก u ไป v น้ำหนัก w)
    printf("Enter edges (u v w):\n");
    for (int i = 0; i < m; ++i) {
        int u, v; float w;
        scanf("%d %d %f", &u, &v, &w);
        u--; v--;  // แปลงเป็น index 0..n-1
        if (u < 0 || u >= n || v < 0 || v >= n) {
            printf("Invalid edge\n");
            return 0;
        }
        g[u][v] = w;    // กราฟมีทิศ
        g[v][u] = w;
        // ถ้ากราฟไม่มีทิศ ให้ใส่เพิ่มบรรทัดนี้:
        // g[v][u] = w;
    }

    int s, t;
    printf("Enter source and destination (1..n): ");
    scanf("%d %d", &s, &t);
    s--; t--;   

    float dist[MAXN], prev[MAXN], used[MAXN];

    // initialize
    for (int i = 0; i < n; ++i) {
        dist[i] = INF;
        prev[i] = -1;
        used[i] = 0;
    }
    dist[s] = 0;

    // Dijkstra O(n^2)
    for (int it = 0; it < n; ++it) {
        int u = -1;
        int best = INF;

        // หา node ที่ยังไม่ใช้ และ dist น้อยที่สุด
        for (int i = 0; i < n; ++i) {
            if (!used[i] && dist[i] < best) {
                best = dist[i];
                u = i;
            }
        }

        if (u == -1 || best == INF) break;  // ไม่มี node ต่อแล้ว
        used[u] = 1;

        // relax เพื่อนบ้านของ u
        for (int v = 0; v < n; ++v) {
            if (!used[v] && g[u][v] < INF) {
                if (dist[u] + g[u][v] < dist[v]) {
                    dist[v] = dist[u] + g[u][v];
                    prev[v] = u;
                }
            }
        }
    }

    // เช็กว่ามีเส้นทางถึง t ไหม
    if (dist[t] == INF) {
        printf("No path from %d to %d\n", s+1, t+1);
        return 0;
    }

    // สร้างเส้นทางย้อนกลับจาก t -> s ด้วย prev[]
    int path[MAXN];
    int len = 0;
    for (int v = t; v != -1; v = prev[v]) {
        path[len++] = v;
    }

    printf("Shortest distance = %f\n", dist[t]);
    printf("Path: ");
    for (int i = len - 1; i >= 0; --i) {
        printf("%d", path[i] + 1);  // แสดงกลับเป็น 1..n
        if (i) printf(" -> ");
    }
    printf("\n");

    return 0;
}
