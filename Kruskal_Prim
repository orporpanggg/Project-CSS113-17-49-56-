//=========== MST Code Explain ===========
//https://www.canva.com/design/DAG5oIzLHcs/FxI_fneFeF2uqf0HHaz0tw/edit?utm_content=DAG5oIzLHcs&utm_campaign=designshare&utm_medium=link2&utm_source=sharebutton


#include <stdio.h>
#include <stdlib.h>
#include <limits.h>
#define MAX 100 

// ===========================================
//               โครงสร้างขอบ
// ===========================================
struct Edge {
    int src, dest, weight;
};
// ===========================================
// ===========================================


// ===========================================
//          โครงสร้างเซตย่อยและยูเนี่ยน
// ===========================================
struct Subset {
    int parent;
    int rank;
};
// ===========================================
// ===========================================


// ===========================================
//            โครงสร้างแสดงกราฟ
// ===========================================
struct Graph {
    int V, E;
    struct Edge* edge;
};
// ===========================================
// ===========================================


// ===========================================
//                  สร้างกราฟ
// ===========================================
struct Graph* createGraph(int V, int E) {
    struct Graph* graph = (struct Graph*)malloc(sizeof(struct Graph));
    graph->V = V;
    graph->E = E;
    graph->edge = (struct Edge*)malloc(E * sizeof(struct Edge));
    return graph;
}
// ===========================================
// ===========================================


// ===========================================
//                ค้นหาแบบยูเนี่ยน
// ===========================================
int find(struct Subset subsets[], int i) {
    if (subsets[i].parent != i)
        subsets[i].parent = find(subsets, subsets[i].parent);

    return subsets[i].parent;
}
void Union(struct Subset subsets[], int x, int y) {
    int rootX = find(subsets, x);
    int rootY = find(subsets, y);
    if (subsets[rootX].rank < subsets[rootY].rank)
        subsets[rootX].parent = rootY;
    else if (subsets[rootX].rank > subsets[rootY].rank)
        subsets[rootY].parent = rootX;
    else {
        subsets[rootY].parent = rootX;
        subsets[rootX].rank++;
    }
}
// ===========================================
// ===========================================


// ===========================================
//              เปรียบเทียบลำดับขอบ
// ===========================================
int compareEdges(const void* a, const void* b) {
    struct Edge* edgeA = (struct Edge*)a;
    struct Edge* edgeB = (struct Edge*)b;
    return edgeA->weight - edgeB->weight;
}
// ===========================================
// ===========================================


// ===========================================
//               Kruskal's
// ===========================================
void kruskalMST(struct Graph* graph) {
    int V = graph->V;
    struct Edge result[MAX]; 
    int e = 0; 
    int i = 0; 

    qsort(graph->edge, graph->E, sizeof(graph->edge[0]), compareEdges);

    struct Subset* subsets = (struct Subset*)malloc(V * sizeof(struct Subset));

    for (int v = 0; v < V; ++v) {
        subsets[v].parent = v;
        subsets[v].rank = 0;
    }

    while (e < V - 1 && i < graph->E) {
        struct Edge nextEdge = graph->edge[i++];

        int x = find(subsets, nextEdge.src);
        int y = find(subsets, nextEdge.dest);
        if (x != y) {
            result[e++] = nextEdge;
            Union(subsets, x, y);
        }
    }
    
    printf("\n           Edges in the MST\n");
    int totalWeight = 0;
    for (i = 0; i < e; ++i) {
        printf("%d -- %d == %d\n", result[i].src, result[i].dest, result[i].weight);
        totalWeight += result[i].weight;
    }
    
    printf("\n-------                         -------");
    printf("\n        Total Weight of MST: %d\n", totalWeight);
    printf("=======================================\n");
    free(subsets);
}
// ===========================================
// ===========================================


// ===========================================
//                Prim's
// ===========================================
void primMST(int graph[MAX][MAX], int V) {
    int parent[MAX]; 
    int key[MAX]; 
    int mstSet[MAX]; 

    for (int i = 0; i < V; i++) {
        key[i] = INT_MAX;
        mstSet[i] = 0; 
    }
    
    key[0] = 0;
    parent[0] = -1; 

    for (int count = 0; count < V - 1; count++) {
        int min = INT_MAX, u;
        for (int v = 0; v < V; v++)
            if (mstSet[v] == 0 && key[v] < min)
                min = key[v], u = v;
        mstSet[u] = 1;

        for (int v = 0; v < V; v++)
            if (graph[u][v] && mstSet[v] == 0 && graph[u][v] < key[v])
                parent[v] = u, key[v] = graph[u][v];
    }

    printf("           Edges in the MST\n");
    int totalWeight = 0;
    for (int i = 1; i < V; i++) {
        printf("%d -- %d == %d\n", parent[i], i, graph[i][parent[i]]);
        totalWeight += graph[i][parent[i]];
    }

    printf("\n-------                         -------");
    printf("\n        Total Weight of MST: %d\n", totalWeight);
    printf("=======================================\n");
}
// ===========================================
// ===========================================


// ===========================================
//              Main Function
// ===========================================
int main() {
    int V, E;
    printf("\n=======================================");
    printf("\n      Enter number of vertices: ");
    scanf("%d", &V);

    printf("=======================================");
    printf("\n      Enter number of edges: ");
    scanf("%d", &E);

    struct Graph* graph = createGraph(V, E);

    printf("=======================================");
    printf("\n   Enter edges (src, dest, weight):\n");
    for (int i = 0; i < E; i++) {
        scanf("%d %d %d", &graph->edge[i].src, &graph->edge[i].dest, &graph->edge[i].weight);
    }
    
    printf("\n=======================================");
    printf("\n          Kruskal's Algorithm");
    printf("\n-------                         -------");
    kruskalMST(graph);


// ===========================================
//              Prim's Convert
// ===========================================

    int adjMatrix[MAX][MAX] = {0};
    for (int i = 0; i < E; i++) {
        int u = graph->edge[i].src;
        int v = graph->edge[i].dest;
        int w = graph->edge[i].weight;
        adjMatrix[u][v] = w;
        adjMatrix[v][u] = w; 
    }
    
// ===========================================
// ===========================================


    printf("\n\n\n=======================================");
    printf("\n           Prim's Algorithm");
    printf("\n-------                         -------\n");
    primMST(adjMatrix, V);
    
    free(graph->edge);
    free(graph);
// ===========================================
// ===========================================

    return 0;
}
